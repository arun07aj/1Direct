{
    "manifest_version": 2,
    "name": "1Direct",
    "version": "1.0",
    "description": "Toggle redirection to another domain.",
    "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "notifications",    
    "<all_urls>"        
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}